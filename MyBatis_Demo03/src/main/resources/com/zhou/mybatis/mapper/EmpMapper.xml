<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhou.mybatis.mapper.EmpMapper">

    <cache/>

    <!--Emp selectByDeptId(Integer deptId);-->
    <select id="selectByDeptId" resultType="map">
        select * from emp where dept_id = ${deptId}
    </select>

    <resultMap id="emp" type="Emp">
        <id property="id" column="id"></id>
        <result property="empName" column="ename"></result>
        <result property="jobId" column="job_id"></result>
        <result property="mgr" column="mgr"></result>
        <result property="joinDate" column="joindate"></result>
        <result property="salary" column="salary"></result>
        <result property="bonus" column="bonus"></result>
        <result property="dept.id" column="dept_id"></result>
        <result property="dept.deptName" column="dname"></result>
        <result property="dept.loc" column="loc"></result>
    </resultMap>
    <!--List<Emp> selectAll();-->
    <select id="selectAll" resultMap="emp">
        select * from emp left join dept on emp.dept_id = dept.id;
    </select>

    <!--Map<String, Object> selectAllToMap();-->
    <select id="selectAllToMap" resultType="map">
        select * from emp left join dept d on d.id = emp.dept_id;
    </select>

    <!--List<Map<String, Object>> selectByLike(String EmpName);-->
    <select id="selectByLike" resultType="map">
        select * from emp left join dept d on d.id = emp.dept_id where ename like  '%${EmpName}%';
    </select>

    <!--int deleteByIds(String ids);-->
    <delete id="deleteByIds">
        delete from emp where id in (${ids})
    </delete>

    <resultMap id="empByAccociation" type="Emp">
        <id property="id" column="id"></id>
        <result property="empName" column="ename"></result>
        <result property="jobId" column="job_id"></result>
        <result property="mgr" column="mgr"></result>
        <result property="joinDate" column="joindate"></result>
        <result property="salary" column="salary"></result>
        <result property="bonus" column="bonus"></result>
        <association property="dept" javaType="Dept">
            <id property="id" column="dept_id"></id>
            <result property="deptName" column="dname"/>
            <result property="loc" column="loc"/>
        </association>
    </resultMap>
    <!--List<Emp> empAndDeptResultMapByAccociation();-->
    <select id="empAndDeptResultMapByAccociation" resultMap="empByAccociation">
        select * from emp left join dept d on d.id = emp.dept_id where emp.id = ${id}
    </select>

    <resultMap id="empByStep" type="Emp">
        <id property="id" column="id"></id>
        <result property="empName" column="ename"></result>
        <result property="jobId" column="job_id"></result>
        <result property="mgr" column="mgr"></result>
        <result property="joinDate" column="joindate"></result>
        <result property="salary" column="salary"></result>
        <result property="bonus" column="bonus"></result>
        <association property="dept" select="com.zhou.mybatis.mapper.DeptMapper.getEmpAndDeptByStep" column="dept_id">
        </association>
    </resultMap>
    <!--Emp getEmpAndDeptByStep();-->
    <select id="getEmpAndDeptByStep" resultMap="empByStep">
        select * from emp where id = ${id};
    </select>

</mapper>